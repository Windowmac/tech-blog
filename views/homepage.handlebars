{{#if loggedIn}}
  <div class='columns'>
    <div class='column'>
      <ul>
        {{#each allPosts}}
          <li><a href="/posts/{{this.id}}">{{this.title}}</a></li>
        {{/each}}
      </ul>

    </div>
    <div class='column'>
      <div class='block'>
        <h2><strong>My Posts</strong></h2>
      </div>
      <ul>
        {{#each userPosts}}
        <li>{{this.title}}</li>
        {{/each}}
      </ul>
    </div>

  </div>

  <button id='logout' class='button is-dark'>Logout</button>
{{else}}
  <a href='/'>Login</a>
{{/if}}

<script src='../js/homepage.js'></script>